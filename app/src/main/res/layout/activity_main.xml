<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".MainActivity">
    android:background="#"

    <TextView
        android:id="@+id/welcome"
        android:layout_width="409dp"
        android:layout_height="166dp"
        android:padding="20sp"
        android:text="You Are Welcome"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Enter"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:padding="20sp"
        android:text="Enter Your information"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />


    <EditText
        android:id="@+id/number"
        android:layout_width="274dp"
        android:layout_height="58dp"

        android:digits="0123456789"
        android:text="Your Number"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/country_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/country_code"
        app:layout_constraintTop_toTopOf="@+id/country_code"
        app:layout_constraintVertical_bias="0.466" />

    <Spinner
        android:id="@+id/country_code"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:foreground="@android:drawable/arrow_down_float"
        android:text="+91"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enter"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="148dp"

        android:layout_marginRight="148dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />


</androidx.constraintlayout.widget.ConstraintLayout>